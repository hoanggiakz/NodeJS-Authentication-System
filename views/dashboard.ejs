<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Dashboard</h3>
                <div>
                    <a href="/user/profile" class="btn btn-info btn-sm me-2">Profile</a>
                    <a href="/user/logout" class="btn btn-outline-danger btn-sm">Logout</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Welcome back!</h4>
                        <% if (user) { %>
                            <p><strong>Email:</strong> <%= user.email %></p>
                            <% if (user.name) { %>
                                <p><strong>Name:</strong> <%= user.name %></p>
                            <% } %>
                            <% if (user.photo) { %>
                                <img src="<%= user.photo %>" alt="Profile" class="rounded-circle" width="50" height="50">
                            <% } %>
                        <% } %>
                        
                        <div class="mt-4">
                            <h5>System Features:</h5>
                            <ul class="list-group">
                                <li class="list-group-item">✅ User Registration</li>
                                <li class="list-group-item">✅ User Authentication</li>
                                <li class="list-group-item">✅ Google OAuth Integration</li>
                                <li class="list-group-item">✅ Session Management</li>
                                <li class="list-group-item">✅ Profile Management</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>Quick Actions</h5>
                                <div class="d-grid gap-2">
                                    <a href="/user/profile" class="btn btn-primary">View Profile</a>
                                    <a href="/" class="btn btn-secondary">Home</a>
                                    <a href="/user/logout" class="btn btn-danger">Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add some simple interactivity
    console.log('Dashboard loaded successfully!');
    console.log('Student: <%= studentName %> - ID: <%= studentId %>');
</script>